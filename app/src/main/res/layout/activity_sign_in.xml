<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/act_signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/act_signin_edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="230dp"
        android:hint="아이디"
        android:textColor="@color/black"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_logo" />

    <EditText
        android:id="@+id/act_signin_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/notosans_regular"
        android:hint="비밀번호(8자리 이상 /영어, 숫자, 특수문자 필수)"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:lineSpacingExtra="4sp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/act_signin_edit_id"
        app:layout_constraintStart_toStartOf="@+id/act_signin_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_edit_id" />

    <TextView
        android:id="@+id/act_signin_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_box_green_72"
        android:paddingVertical="12dp"
        android:text="로그인"
        android:gravity="center"
        android:fontFamily="@font/nanumsquare_bold"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signin_edit_password" />



</androidx.constraintlayout.widget.ConstraintLayout>